# {{ ansible_managed }}

/var/log/nginx/*.log {
        daily
        missingok
        rotate 14
        compress
        delaycompress
        dateext
        dateformat -%Y-%m-%d
        notifempty
        create 640 nginx adm
        sharedscripts
        postrotate
                if [ -f /var/run/nginx.pid ]; then
                        kill -USR1 `cat /var/run/nginx.pid`
                fi
        endscript
}
